<div class="row">
    <div class="col-11">
        <h1 class="display-4">dependentes</h1>
    </div>
    <div class="col-1">
        <a href="/funcionarios/cadastro_dependentes" class="btn btn-primary" role="button">
            <span class="material-icons">add</span>
        </a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome DEP</th>
            <th scope="col">Telefone</th>
            <th scope="col">Nome FUN</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{nome}}</td>
            <td>{{telefone}}</td>
            <td>{{NOME}}</td>
            <td>
                <div class="btn-toolbar mb-3" role="toolbar">
                    <div class="btn-group mr-2">
                        <button type="button" class="btn btn-success" onclick="editar({{id}})">
                            <span class="material-icons">edit</span>
                        </button>
                        <button type="button" class="btn btn-danger" onclick="excluir({{id}})">
                            <span class="material-icons">delete</span>
                        </button>
                    </div>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script>
    function editar(id) {
        window.location.href = `/funcionarios/dependentes/${id}`;
    }
    async function excluir(id) {
        await fetch(`/funcionarios/dependente/${id}`,
            { method: "delete", headers: { "Content-Type": "application/json" } });
        window.location.href = "/funcionarios/dependentes"
    }
</script>